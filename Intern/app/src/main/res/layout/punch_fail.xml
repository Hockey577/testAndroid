<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/rl_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="打卡失败"
            android:textColor="@color/text_black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/tv_success"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/close1" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_success"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  未进入考勤范围！"
                android:textColor="@color/text_gray"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_marginTop="14dp"
            android:textColor="@color/text_blue"
            android:layout_below="@id/ll_time"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a slow walker ,"/>
        <TextView
            android:textColor="@color/text_blue"
            android:layout_below="@id/tv_text"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="but I never walk backwards."/>
    </RelativeLayout>

</RelativeLayout>